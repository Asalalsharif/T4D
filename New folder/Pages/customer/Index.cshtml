@page
@model TD4.Pages.customer.IndexModel
@{
}
<br />
<h2>List of Customers </h2>
<a class='btn btn-primary btn-sm' href="/customer/create"> New Customer </a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Pass</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Adress</th>
            <th>Order_id</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listCustomer)
        {
            <tr>

                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.pass</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.order_id</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/customer/Edit?id=@item.id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/customer/Delete?id=@item.id">Delete</a>
                </td>



            </tr>
        }

    </tbody>
</table>

